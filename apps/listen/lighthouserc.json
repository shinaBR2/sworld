{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--disable-gpu --no-sandbox --no-zygote"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "interactive": ["warn", { "maxNumericValue": 5000 }, "error", { "maxNumericValue": 6500 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 1800 }, "error", { "maxNumericValue": 2500 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 2500 }, "error", { "maxNumericValue": 4000 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.05 }, "error", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 300 }, "error", { "maxNumericValue": 600 }],
        "speed-index": ["warn", { "maxNumericValue": 3000 }, "error", { "maxNumericValue": 4200 }],
        "resource-summary:third-party:count": ["warn", { "maxNumericValue": 15 }, "error", { "maxNumericValue": 20 }],
        "resource-summary:script:size": ["warn", { "maxNumericValue": 150000 }, "error", { "maxNumericValue": 200000 }],
        "resource-summary:total:size": ["warn", { "maxNumericValue": 350000 }, "error", { "maxNumericValue": 420000 }],
        "is-crawlable": "off",
        "inspector-issues": "off",
        "image-size-responsive": "off",
        "label-content-name-mismatch": "off",
        "third-party-cookies": "off"
      }
    }
  }
}
