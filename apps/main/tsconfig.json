{
  "exclude": ["node_modules"],
  "extends": "tsconfig/vite.json",
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "chrome"],
    "paths": {
      "ui": ["../../packages/ui/src"],
      "ui/*": ["../../packages/ui/src/*"],
      "core": ["../../packages/core/src"],
      "core/*": ["../../packages/core/src/*"]
    }
  },
  "include": ["src"]
}
